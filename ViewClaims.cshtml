@model List<PROGPART1.Models.Claim>

@{
    ViewData["Title"] = "View Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .claims-table-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f8f9fa;
    }

        .claims-table-container h2 {
            text-align: center;
            color: #d35400;
            margin-bottom: 20px;
        }

        .claims-table-container table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        .claims-table-container th, .claims-table-container td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .claims-table-container th {
            background-color: #f39c12;
            color: white;
        }

        .claims-table-container tr:hover {
            background-color: #f1f1f1;
        }
</style>

<div class="claims-table-container">
    <h2>View Claims</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Title</th>
                <th>Amount</th>
                <th>Date Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.Title</td>
                    <td>@claim.Amount</td>
                    <td>@claim.UpdatedAt.ToString("d")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
